# API Keys - Document Parsers
LLAMA_CLOUD_API_KEY=your_llama_cloud_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Cloud - Vertex AI (for embeddings and VertexDocAI parser)
# Option 1: API Key (simpler - from Vertex AI Studio)
VERTEX_API_KEY=your_vertex_ai_studio_api_key_here

# Option 2: Service Account (traditional - if not using API key)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
# GOOGLE_CLOUD_PROJECT=your-gcp-project-id
# VERTEX_DOCAI_PROCESSOR_ID=your-processor-id
# VERTEX_DOCAI_LOCATION=us  # or eu, asia-northeast1, etc.

# PageIndex (if requires API key)
PAGEINDEX_API_KEY=your_pageindex_api_key_here

# Storage Backend Configurations
# ChromaDB
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION_NAME=petroleum_docs

# Weaviate
WEAVIATE_HOST=localhost
WEAVIATE_PORT=8080
WEAVIATE_GRPC_PORT=50051
WEAVIATE_CLASS_NAME=PetroleumDocument

# FalkorDB (Redis-based)
FALKORDB_HOST=localhost
FALKORDB_PORT=6379
FALKORDB_GRAPH_NAME=petroleum_rag

# Parser Settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MIN_CHUNK_SIZE=100
MAX_CHUNK_SIZE=2000

# Embedding Model Settings
EMBEDDING_PROVIDER=openai  # openai or vertex
EMBEDDING_MODEL=text-embedding-3-small  # For OpenAI
EMBEDDING_DIMENSION=1536  # 1536 for OpenAI, 768 for Vertex gecko
EMBEDDING_BATCH_SIZE=100

# Vertex AI Embedding Settings (if using vertex provider)
VERTEX_EMBEDDING_MODEL=textembedding-gecko@003

# Evaluation Settings
EVAL_LLM_PROVIDER=anthropic  # anthropic or vertex
EVAL_LLM_MODEL=claude-sonnet-4-20250514  # For Anthropic (Claude)
VERTEX_LLM_MODEL=gemini-1.5-pro  # For Vertex (Gemini)
EVAL_LLM_TEMPERATURE=0.0
EVAL_LLM_MAX_TOKENS=4096

# Retrieval Settings
RETRIEVAL_TOP_K=5
RETRIEVAL_MIN_SCORE=0.5

# Benchmark Settings
BENCHMARK_PARALLEL_PARSERS=true
BENCHMARK_PARALLEL_STORAGE=true
BENCHMARK_SAVE_INTERMEDIATE_RESULTS=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=benchmark.log

# Development
DEBUG=false
ENABLE_PROFILING=false
